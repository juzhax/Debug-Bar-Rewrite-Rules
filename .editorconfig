root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab
indent_size = 4
max_line_length = 80

[*.php]
max_line_length = 100

[*.js]
max_line_length = 100

[*.less]
indent_style = tab
indent_size = 4
max_line_length = 100


[{package.json,*.yml,*.md,*.markdown}]
indent_style = space
indent_size = 2
